  "version": "0.2.0",
  "configurations": [{
      "name": "Unit Test Focused",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/jest",
      "args": [
        "${workspaceRoot}/test/lib/index.test.js", // replace this file with the file to focus
        "-i",
        "--forceExit"
      ],
      "env": {
        "NODE_ENV": "development",
        "DEFAULT_TIMEOUT_INTERVAL": "999000"
      },
      "cwd": "${workspaceRoot}"
      }
  ]
}