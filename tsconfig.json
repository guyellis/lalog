{
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "lib": ["ES2022", "dom"],
    "module": "commonjs",
    "noEmit": false,
    "outDir": "dist",
    "resolveJsonModule": false,
    "sourceMap": true,
    "strict": true,
    "target": "es2022"
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}