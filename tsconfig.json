{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "lib": ["es2016"],
    "module": "commonjs",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2017"
  },
  "include": [
    "lib/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}