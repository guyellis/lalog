{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "lib": ["es2016"],
    "module": "commonjs",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es5"
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}